<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :name %><br />
  <%= f.text_field :name, :autofocus => true %></p>

  <p><%= f.label :gender %><br />
  Male: <%= f.radio_button(:gender, "Male") %>&nbsp;&nbsp;Female: <%= f.radio_button(:gender, "Female") %></p>

  <p><%= f.label :measurement_system %><br />
  U.S.: <%= f.radio_button(:measurement_system, "US") %>&nbsp;&nbsp;Metric: <%= f.radio_button(:measurement_system, "Metric") %></p>

  <p><%= f.label :email %><br />
  <%= f.email_field :email %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.submit "Sign up", class: "btn btn-primary" %></p>
<% end %>

<%= render "devise/shared/links" %>
