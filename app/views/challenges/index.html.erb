<div class="row">
	<div class="col-md-4">
		<%= render "users/userinfo" %>
		<%= render "posts/post_form" %>
		<%= render "goals/goalviewindex" %>
	</div>
	<div class="col-md-8">
		<h1>All Challenges</h1>
		<% if current_user.admin == true %>
			<p><%= link_to "Create a new challenge here", new_challenge_path %></p>
		<% end %>
		<% if @challenges.any? %>
    		<%= render partial: 'challenge', collection: @challenges %>
		<% else %>
			<p>No Challenges Yet</p>
		<% end %>
	</div>
</div>