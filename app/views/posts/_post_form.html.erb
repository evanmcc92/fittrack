<div id="user-info">
	<h4>Post something</h4>
	<%= form_for @post do |f| %>
		<p><%= f.text_area :content, placeholder: "Compose new post...", class: "form-control message" %></p>
		<p>You have <B><SPAN class="countdown">140</SPAN></B> characters remaining.</p>
		<p><%= f.submit "Post", class: "btn btn-large btn-primary" %></p>
	<% end %>
</div>
<script>
function updateCountdown() {
    // 140 is the max message length
    var remaining = 140 - jQuery('.message').val().length;
    jQuery('.countdown').text(remaining);
}

$(document).ready(function($) {
    updateCountdown();
    $('.message').change(updateCountdown);
    $('.message').keyup(updateCountdown);
});
</script>