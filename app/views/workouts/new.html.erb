<div class="row">
	<div class="col-md-4">
		<%= render "users/userinfo" %>
		<%= render "posts/post_form" %>
		<%= render "goals/goalviewindex" %>
	</div>
	<div class="col-md-8">
		<h1>Create a Workout</h1>
		<p>Fill out the following accordingly</p>

		<p>&nbsp;</p>


		<%= form_for @workout do |f| %>
			<div id="sets">

		  		<div class="set">
					<%= f.fields_for :wo_sets do |w| %>

						<p><%= w.label :exercise %>: <%= w.collection_select :exercise_id, Exercise.all, :id, :name, {prompt: "Select a exercise"}, {class: "form-control"}  %><br>
						<%= w.label :rep %>: <%= w.text_field :rep, class: "form-control" %><br>
						<%= w.label :weight %>: <%= w.text_field :weight, class: "form-control" %><br>
						<%= w.label :time %>: <%= w.text_field :time, class: "form-control" %><br>
						<%= w.label :distance %>: <%= w.text_field :distance, class: "form-control" %></p>

					<% end %>
				</div>

			</div>


			<p><%= f.submit :submit, class: "btn btn-primary" %></p>

		<% end %>
	</div>
</div>