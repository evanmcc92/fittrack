<div class="panel panel-default" id="workout-<%= workout.id %>" >
	<div class="panel-heading">
		Done <%= time_ago_in_words(workout.created_at) %> ago.
	</div>
	<div class="panel-body">
		<p>Workout id: <%= workout.id %><br>
		Date done: <%= workout.created_at.strftime '%m/%d/%Y' %></p>

		<% workout.wo_sets.each do |wo_set| %>
			<p><% if wo_set.rep != "" %><%= Exercise.find(wo_set.exercise_id).name %> rep: <%= wo_set.rep %><br><% end %>
			<% if wo_set.weight != "" %><%= Exercise.find(wo_set.exercise_id).name %> weight: <%= wo_set.weight %><br><% end %>
			<% if wo_set.distance != "" %><%= Exercise.find(wo_set.exercise_id).name %> distance: <%= wo_set.distance %><br><% end %>
			<% if wo_set.time != "" %><%= Exercise.find(wo_set.exercise_id).name %> time: <%= wo_set.time %><% end %></p>
		<% end %>
	</div>
  	<% if current_user == workout.user %>
	  	<div class="panel-footer">
			<%= link_to "", workout_path(workout), :method => :delete, class: "glyphicon glyphicon-trash" %>
	  	</div>
	<% end %>
</div>