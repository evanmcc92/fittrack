

<div class="row">
		<h1><%= current_user.name %>'s Progress</h1>
		<div class="col-md-8">
		<!-- chart goes here -->
		<% if @feed_items.where(:model_name => "workout").any? %>
		    <%= render partial: 'shared/feed_item', collection: @feed_items.where(:model_name => "workout") %>
		<% else %>
			<p><%= link_to "You can create a new workout here", new_workout_path %></p>
		<% end %>
		<%= will_paginate @feed_items %>
		</div>
		<div class="col-md-4">
			<%= form_tag(:back, :method => 'get', :class => "navbar-form") do %>
				<%= hidden_field_tag :direction, params[:direction] %>
				<%= hidden_field_tag :sort, params[:sort] %>
            	<%= text_field_tag :search, params[:search], :class => "input-small appendedInputButton form-control", :placeholder => "Search for an exercise" %>
          	<% end %>
			<% if @exercises %>
				<table class="table table-hover table-bordered">
					<col span="1" style="width: 15%;">
					<col span="2" style="width: 75%;">
					<tr>
						<th><%= sortable "name" %></th>
						<th><%= sortable "description" %></th>
						<th><%= sortable "category" %></th>
					</tr>
						<% @exercises.each do |exercise| %>
						<tr>
							<td><%= exercise.name %></td>
							<td><%= exercise.description %></td>
							<td><%= exercise.category %></td>
						</tr>
						<% end %>
				</table>
				<%= will_paginate @exercises %>
			<% else %>
				<p>No Exercises</p>
			<% end %>
		</div>
	</div>